# Test Environment Variables
# Used by pytest and test scripts

MODE=test

# PostgreSQL Test Database (docker-compose.test.yaml)
POSTGRES_INTERNAL_URL=postgresql+asyncpg://test_user:test_pass@localhost:5433/test_app_db
POSTGRES_INTERNAL_URL_SYNC=postgresql+psycopg2://test_user:test_pass@localhost:5433/test_app_db

# Redis Test (docker-compose.test.yaml)
REDIS_URL=redis://localhost:6380/0

# JWT Configuration
SECRET_KEY=test-secret-key-do-not-use-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SMTP (mocked in tests)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=test@example.com
SMTP_PASSWORD=test-password

# Sentry (disabled in tests)
SENTRY_DSN=

# Celery (mocked in tests)
CELERY_BROKER_URL=redis://localhost:6380/0
CELERY_RESULT_BACKEND=redis://localhost:6380/0
